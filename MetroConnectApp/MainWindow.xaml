<Window x:Class="MetroConnectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Metro Connect App" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Metro Connect Application" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button x:Name="btnViewReports" Content="View Reports" Click="ViewReportsButton_Click" Width="200" Margin="0,5"/>
            <Button x:Name="btnReportIssues" Content="Report Issues" Click="ReportIssuesButton_Click" Width="200" Margin="0,5"/>
            <Button x:Name="btnLocalEvents" Content="Local Events" Click="LocalEventsButton_Click" Width="200" Margin="0,5"/>
            <Button x:Name="btnServiceRequest" Content="Service Request Status" Click="ServiceRequestButton_Click" Width="200" Margin="0,5"/>
            <Button x:Name="btnExit" Content="Exit" Click="ExitButton_Click" Width="200" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
